<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/signup_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/actionBarSize"
                    android:gravity="center"
                    android:minHeight="@dimen/actionBarSize"
                    app:layout_scrollFlags="scroll|enterAlways"
                    app:theme="@style/DrawerArrowStyle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10_dp"
                android:layout_marginEnd="@dimen/margin_35_dp"
                android:layout_marginLeft="@dimen/margin_35_dp"
                android:layout_marginRight="@dimen/margin_35_dp"
                android:layout_marginStart="@dimen/margin_35_dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    >

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/edt_sign_up_user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/edit_text_gray_background"
                        android:theme="@style/TextLabel">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_sign_up_user_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_custom_editext_drawable"
                            android:drawableLeft="@drawable/ic_user"
                            android:drawablePadding="@dimen/padding_10_dp"
                            android:drawableStart="@drawable/ic_user"
                            android:hint="@string/sign_up_screen_name"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:letterSpacing="0.1"
                            android:maxLength="25"
                            android:paddingBottom="@dimen/padding_10_dp"
                            android:paddingEnd="0dp"
                            android:paddingLeft="@dimen/padding_15_dp"
                            android:paddingRight="0dp"
                            android:paddingStart="@dimen/padding_15_dp"
                            android:paddingTop="@dimen/padding_5_dp"
                            android:textColor="@color/edit_text_login_color"
                            android:textColorHint="@color/edit_text_gray_background"
                            android:textSize="@dimen/font_size_14sp" />
                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>

                <TextView
                    android:id="@+id/tv_name_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_40_dp"
                    android:layout_marginStart="@dimen/margin_40_dp"
                    android:layout_marginTop="3dp"
                    android:textColor="#ff1400"
                    android:textSize="10sp"
                    android:visibility="invisible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_3_dp"
                    android:orientation="vertical"

                    >

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/edt_sign_up_phone_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_custom_editext_drawable"
                        android:paddingEnd="0dp"
                        android:paddingLeft="@dimen/padding_10_dp"
                        android:paddingRight="0dp"
                        android:paddingStart="@dimen/padding_10_dp"
                        android:textColorHint="@color/edit_text_gray_background"
                        android:theme="@style/TextLabel">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_sign_up_phone_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:digits="0123456789"
                            android:drawableLeft="@drawable/ic_call"
                            android:drawablePadding="@dimen/padding_10_dp"
                            android:drawableStart="@drawable/ic_call"
                            android:hint="@string/sign_up_screen_mobile_number"
                            android:imeOptions="actionNext"
                            android:inputType="numberDecimal"
                            android:letterSpacing="0.1"
                            android:maxLength="10"
                            android:paddingBottom="@dimen/padding_10_dp"

                            android:paddingEnd="0dp"
                            android:paddingLeft="@dimen/padding_5_dp"
                            android:paddingRight="0dp"
                            android:paddingStart="@dimen/padding_5_dp"
                            android:paddingTop="@dimen/padding_8_dp"
                            android:textColor="@color/edit_text_login_color"
                            android:textColorHint="@color/edit_text_gray_background"
                            android:textSize="@dimen/font_size_14sp" />
                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>

                <TextView
                    android:id="@+id/tv_phone_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_40_dp"
                    android:layout_marginStart="@dimen/margin_40_dp"
                    android:layout_marginTop="3dp"
                    android:textColor="#ff1400"
                    android:textSize="10sp"
                    android:visibility="invisible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_3_dp"
                    android:orientation="vertical"

                    >

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/edt_sign_up_email_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_custom_editext_drawable"
                        android:paddingEnd="0dp"
                        android:paddingLeft="@dimen/padding_10_dp"
                        android:paddingRight="0dp"
                        android:paddingStart="@dimen/padding_10_dp"
                        android:textColorHint="@color/edit_text_gray_background"
                        android:theme="@style/TextLabel">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_sign_up_email_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:drawableLeft="@drawable/ic_email"
                            android:drawablePadding="@dimen/padding_10_dp"
                            android:drawableStart="@drawable/ic_email"
                            android:hint="@string/sign_up_screen_email_id"
                            android:imeOptions="actionNext"
                            android:inputType="textEmailAddress"
                            android:letterSpacing="0.1"
                            android:paddingBottom="@dimen/padding_10_dp"
                            android:paddingEnd="0dp"
                            android:paddingLeft="@dimen/padding_5_dp"
                            android:paddingRight="0dp"
                            android:paddingStart="@dimen/padding_5_dp"
                            android:paddingTop="@dimen/padding_5_dp"
                            android:textColor="@color/edit_text_login_color"
                            android:textColorHint="@color/edit_text_gray_background"
                            android:textSize="@dimen/font_size_14sp" />
                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>

                <TextView
                    android:id="@+id/tv_email_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_40_dp"
                    android:layout_marginStart="@dimen/margin_40_dp"
                    android:layout_marginTop="3dp"
                    android:textColor="#ff1400"
                    android:textSize="10sp"
                    android:visibility="invisible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_3_dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_custom_editext_drawable"
                        android:paddingEnd="0dp"
                        android:paddingLeft="@dimen/padding_10_dp"
                        android:paddingRight="0dp"
                        android:paddingStart="@dimen/padding_10_dp"
                        android:textColorHint="@color/edit_text_gray_background"

                        android:theme="@style/TextLabel">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_signup_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:drawableLeft="@drawable/ic_password"
                            android:drawablePadding="@dimen/padding_10_dp"
                            android:drawableStart="@drawable/ic_password"
                            android:hint="@string/password_text"
                            android:imeOptions="actionNext"
                            android:inputType="textPassword"
                            android:maxLength="25"
                            android:paddingBottom="@dimen/padding_10_dp"
                            android:paddingEnd="0dp"
                            android:paddingLeft="@dimen/padding_5_dp"
                            android:paddingRight="0dp"
                            android:paddingStart="@dimen/padding_5_dp"
                            android:paddingTop="@dimen/padding_5_dp"
                            android:textColor="@color/edit_text_login_color"
                            android:textColorHint="@color/edit_text_gray_background"
                            android:textSize="@dimen/font_size_14sp" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_sign_up_min_character"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/margin_3_dp"
                    android:gravity="end"
                    android:text="@string/sign_up_min_character_text"
                    android:textColor="#99666666"
                    android:textSize="10.7sp" />

                <TextView
                    android:id="@+id/tv_pwd_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_40_dp"
                    android:layout_marginStart="@dimen/margin_40_dp"
                    android:layout_marginTop="3dp"
                    android:textColor="#ff1400"
                    android:textSize="10sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_3_dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_custom_editext_drawable"
                        android:paddingEnd="0dp"
                        android:paddingLeft="@dimen/padding_10_dp"
                        android:paddingRight="0dp"
                        android:paddingStart="@dimen/padding_10_dp"
                        android:textColorHint="@color/edit_text_gray_background"

                        android:theme="@style/TextLabel">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_sign_up_confirm_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:drawableLeft="@drawable/ic_password"
                            android:drawablePadding="@dimen/padding_10_dp"
                            android:drawableStart="@drawable/ic_password"
                            android:hint="@string/txt_confirm_pwd"
                            android:imeOptions="actionNext"
                            android:inputType="textPassword"
                            android:maxLength="25"
                            android:paddingBottom="@dimen/padding_10_dp"
                            android:paddingEnd="0dp"
                            android:paddingLeft="@dimen/padding_5_dp"
                            android:paddingRight="0dp"
                            android:paddingStart="@dimen/padding_5_dp"
                            android:paddingTop="@dimen/padding_5_dp"
                            android:textColor="@color/edit_text_login_color"
                            android:textColorHint="@color/edit_text_gray_background"
                            android:textSize="@dimen/font_size_14sp" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_confirm_pwd_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_40_dp"
                    android:layout_marginStart="@dimen/margin_40_dp"
                    android:layout_marginTop="3dp"
                    android:textColor="#ff1400"
                    android:textSize="10sp"
                    android:visibility="invisible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_3_dp"

                    >

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_custom_editext_drawable"
                        android:paddingEnd="0dp"
                        android:paddingLeft="@dimen/padding_10_dp"
                        android:paddingRight="0dp"
                        android:paddingStart="@dimen/padding_10_dp"
                        android:textColorHint="@color/edit_text_gray_background"
                        android:theme="@style/TextLabel">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_sign_up_aadhar_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:drawableLeft="@drawable/ic_aadhar"
                            android:drawablePadding="@dimen/padding_10_dp"
                            android:drawableStart="@drawable/ic_aadhar"
                            android:hint="@string/sign_up_screen_aadhar_number"
                            android:imeOptions="actionNext"
                            android:inputType="numberDecimal"
                            android:maxLength="12"
                            android:paddingBottom="@dimen/padding_10_dp"
                            android:paddingEnd="0dp"
                            android:paddingLeft="@dimen/padding_5_dp"
                            android:paddingRight="0dp"
                            android:paddingStart="@dimen/padding_5_dp"
                            android:paddingTop="@dimen/padding_5_dp"
                            android:textColor="@color/edit_text_login_color"
                            android:textColorHint="@color/edit_text_gray_background"
                            android:textSize="@dimen/font_size_14sp" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_aadhar_number_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_40_dp"
                    android:layout_marginStart="@dimen/margin_40_dp"
                    android:layout_marginTop="3dp"
                    android:textColor="#ff1400"
                    android:textSize="10sp"
                    android:visibility="invisible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_25_dp"
                    android:layout_marginTop="@dimen/margin_15_dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/btn_sign_up_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/brick_btn_bg"
                        android:paddingBottom="@dimen/padding_12_dp"
                        android:paddingEnd="@dimen/padding_45_dp"
                        android:paddingLeft="@dimen/padding_45_dp"
                        android:paddingRight="@dimen/padding_45_dp"
                        android:paddingStart="@dimen/padding_45_dp"
                        android:paddingTop="@dimen/padding_12_dp"
                        android:text="@string/txt_next"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_14sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>