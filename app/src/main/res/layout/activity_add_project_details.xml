<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:fillViewport="true"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="lokavidya.iitb.com.lvcreate.activity.AddProjectDetails">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_scrollFlags="scroll|enterAlways"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />



    <android.support.design.widget.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"

        >


    <EditText
        android:id="@+id/project_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:ems="10"
        android:maxLength="15"
        android:hint="Title of Project"
        android:inputType="textPersonName"
      />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >

    <EditText
        android:id="@+id/video_descrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description of Video"
        android:layout_marginEnd="50dp"
        android:maxLength="150"
        android:layout_marginStart="50dp"

        android:ems="10"
        android:inputType="textMultiLine"
         />

    </android.support.design.widget.TextInputLayout>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Video Language"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="60dp"
        />


    <Spinner
        android:id="@+id/video_lang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"

        app:layout_constraintEnd_toEndOf="parent"
        />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Channel"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="60dp"
        />

    <Spinner
        android:id="@+id/channel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"

         />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sub Channel"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="60dp"
        />

    <Spinner
        android:id="@+id/subchannel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"

         />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"

        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/brick_btn_bg"
        android:layout_marginTop="35dp"

        android:textColor="@color/white"
        />



</LinearLayout>


</ScrollView>



